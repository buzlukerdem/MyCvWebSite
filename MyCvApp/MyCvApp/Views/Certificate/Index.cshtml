@using MyCvApp.Models.Entity
@model List<Tbl_Certificate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card" style="font-family:'Times New Roman', Times, serif">
                        <h1 style="text-align:center;">Sertifika Güncelleme Sayfası</h1>
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            @item.Date
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Explanation
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Certificate/Update/@item.ID" class="btn btn-info btn-sm">Güncelle</a>
                                                    <a href="/Certificate/Delete/@item.ID" class="btn btn-danger btn-sm">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div style="text-align:center">
                            <a href="/Certificate/Insert/" class="btn btn-primary" style="width:150px;height:40px; margin-bottom:50px">Yeni Sertifika Ekle</a>
                        </div>
                    </div><!-- /.card-body -->
                </div>
            </div>
        </div>
    </section>
</body>
</html>
